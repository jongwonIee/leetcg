<% provide(:page_title, @post.title) %>
<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="card post-card mb-5">
      <% if @post.header_image.present? %>
        <div class="header-image" style="background-image: url(<%= url_for(@post.header_image) %>)"></div>
      <% else %>
        <div class="header-image" style="background-image: url('/default.png')"></div>
      <% end %>
      <div class="card-body">
        <div class="pl-3 pr-3 pt-4 pb-4">
          <h1 class="card-title mb-3"><%= @post.title %></h1>
          <div><%= @views %> Views (<%= @uniq_views %> Uniq Views) </div>
          <div class="mb-5"><%= @post.hashtag %></div>
          <% @post.elements.each do |element| %>
            <% if element.image? %>
              <div class="image-element mb-5">
                <%= image_tag(element.image) %>
              </div>
            <% else %>
              <div class="content-element mb-5">
                <%= element.content %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<% provide(:page_title, 'Blog') %>
<div class="row col-lg-10 offset-lg-1">
  <% @posts.each do |post| %>
      <div class="col-md-6 col-lg-4">
        <%= link_to blog_post_path(post) do %>
        <div class="card post-card">
          <div class="header-image" style="background-image: url(<%= url_for(post.header_image) %>)"></div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-title"><%= post.hashtag %></p>
            <p class="card-text"><%= truncate(post.description, length:100) %></p>
          </div>
        </div>
        <% end %>
      </div>
  <% end %>
</div>

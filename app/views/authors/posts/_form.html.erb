<%= form_with(model: post) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :hashtag %>
    <%= form.text_field :hashtag, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :condition %>
    <%= form.text_field :condition, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :language %>
    <%= form.text_field :language, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :stock %>
    <%= form.text_field :stock, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :header_image %>
    <%= form.file_field :header_image %>
    <div class="mt-1">
      <small>Current Image</small>
      <% if post.header_image.present? %>
        <%= image_tag(post.header_image, width: '100%') %>
      <% else %>
        <div class="header-image" style="background-image: url('/default.png')"></div>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
